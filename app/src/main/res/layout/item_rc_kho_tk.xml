<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="66.1618dp"
    android:orientation="horizontal"
    android:gravity="center|left"
    android:layout_marginTop="6.1618dp"
    android:background="@drawable/item_frame_and_bg">

    <LinearLayout
        android:layout_weight="8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center|left"
        android:background="@drawable/item_frame_and_bg">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vị trí"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textColor="#5841E6"
        android:id="@+id/txtIndexKhoTKKho"
        android:textSize="16.1618dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên sách"
        android:layout_marginLeft="15dp"
        android:textColor="#5841E6"
        android:id="@+id/txtTenSachKhoTKKho"
        android:textSize="14.1618dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số lượng trong kho"
        android:layout_marginLeft="15dp"
        android:textColor="#5841E6"
        android:id="@+id/txtSoLuongKhoTKKHo"
        android:textSize="14.1618dp"/>

    </LinearLayout>

</LinearLayout>