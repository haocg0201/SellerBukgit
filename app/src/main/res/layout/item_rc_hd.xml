<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center|left"
    android:layout_marginTop="6.1618dp"
    android:padding="3dp"
    android:background="@drawable/item_frame_and_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|left"
        android:padding="5dp">

        <LinearLayout
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center|left"
            android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã hóa đơn"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textColor="#5841E6"
            android:id="@+id/txtIndexHD"
            android:textSize="16.1618dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã nhân viên"
            android:layout_marginLeft="15dp"
            android:textColor="#5841E6"
            android:id="@+id/txtMaNVHD"
            android:textSize="14.1618dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên khách hàng mua"
            android:layout_marginLeft="15dp"
            android:textColor="#5841E6"
            android:id="@+id/txtTenKhachHangHD"
            android:textSize="14.1618dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày lập"
            android:layout_marginLeft="15dp"
            android:textColor="#5841E6"
            android:id="@+id/txtNgayLapHD"
            android:textSize="14.1618dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền"
            android:layout_marginLeft="15dp"
            android:textColor="#5841E6"
            android:id="@+id/txtTongTienHD"
            android:textSize="14.1618dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trang thái đơn hàng"
            android:layout_marginLeft="15dp"
            android:textColor="#5841E6"
            android:id="@+id/txtTrangThaiDonHangHD"
            android:textSize="14.1618dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/item_frame_and_bg">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/edit"
                android:layout_marginBottom="15dp"
                android:id="@+id/ivEditHoaDon"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                android:layout_marginBottom="15dp"
                android:id="@+id/ivDeleteHoaDon"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_eye_24"
                android:id="@+id/ivDisplayHDCT"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thanh toán"
        android:backgroundTint="@color/mau_chu_dao"
        android:id="@+id/btnChangeHDStatus"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hủy hóa đơn"
        android:backgroundTint="@color/mau_chu_dao"
        android:id="@+id/btnChangeHDStatusToHuy"/>

</LinearLayout>